# EVI SCAN Environment Variables
# Copy this file to .env and update with your values

# Flask Secret Key (required for production)
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production

# Development Mode (set to True to bypass authentication)
# WARNING: Only use True for development/testing
DEV_MODE=False

# LM Studio Configuration (optional)
# If using LM Studio for AI chat, configure these:
LM_STUDIO_URL=http://localhost:1234
LM_STUDIO_MODEL=your-model-name

# Database Paths (optional - defaults are used if not set)
# AUTH_DB_PATH=path/to/authentication/database
# SESSION_DB_PATH=path/to/session/database

# Logging Level (optional)
# LOG_LEVEL=INFO
